<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Selenium CrossBrowser Suite" verbose="1" parallel="tests" thread-count="4">
    <listeners>
        <listener class-name="com.framework.listeners.TestListener"/>
        <listener class-name="com.framework.retry.RetryTransformer"/>
    </listeners>

    <test name="Home Tests">
        <classes>
            <class name="com.tests.HomePageTest"/>
        </classes>
    </test>

    <test name="Cucumber BDD">
        <classes>
            <class name="com.framework.bdd.runner.CucumberTestRunner"/>
        </classes>
    </test>
</suite>
